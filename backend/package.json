{
  "name": "whiteboard-backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon --watch './src/**/*.ts' --watch .env --ignore websockets/ --exec tsx ./src/main.ts",
    "dev-ws": "nodemon --watch './src/websockets/**/*.ts' --exec tsx ./src/websockets/wsServer.ts",
    "build": "tsc && tsc-alias",
    "start": "node ./dist/main.js",
    "start-ws": "node ./dist/websockets/wsServer.js",
    "start-db": "docker-compose -f docker-compose.yml up -d",
    "check-types": "tsc --noEmit",
    "test": "jest"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.4.3",
    "express-jwt": "^8.4.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.3.0",
    "query-string": "^8.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "yup": "^1.3.3"
  }
}
